<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChannelBrowseActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:divider="@drawable/divider_feed_content"
            android:showDividers="middle">

            <TextView
                android:id="@+id/followedChannels"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Following"
                android:textSize="20dp"
                />

            <LinearLayout
                android:id="@+id/personal_channels_followed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:divider="@drawable/divider_feed_content"
                android:showDividers="middle"
                />

            <TextView
                android:id="@+id/allChannels"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="All"
                android:textSize="20dp"
                />

            <LinearLayout
                android:id="@+id/personal_channels_all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:divider="@drawable/divider_feed_content"
                android:showDividers="middle"
                />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
