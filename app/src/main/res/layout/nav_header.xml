<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_header_parent_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="176dp"
    android:background="@color/lighter_forest"
    android:gravity="bottom"
    android:padding="20dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <FrameLayout
        android:id="@+id/nav_header_framelayout"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/nav_header_profilePic"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/user_icon"
            android:contentDescription="profile picture" />

        <ImageView
            android:id="@+id/circle_crop"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/circle"
            app:tint="@color/lighter_forest"
            android:contentDescription="circle crop" />
    </FrameLayout>

    <TextView
        android:id="@+id/nav_header_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:text="Käyttäjä"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
</LinearLayout>