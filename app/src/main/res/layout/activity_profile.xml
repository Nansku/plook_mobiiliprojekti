<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/CustomTheme">

    <LinearLayout
        android:id="@id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <include
        layout="@layout/appbar"/>
    </LinearLayout>


    <FrameLayout android:id="@+id/frame"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear"
        app:layout_constraintBottom_toBottomOf="@id/bio">


        <ImageView android:id="@+id/pic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/user_icon" />

        <ImageView android:id="@+id/circle_crop"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/circle" />
    </FrameLayout>

    <RelativeLayout

        android:orientation="vertical"
        android:id="@+id/bio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frame"
        app:layout_constraintBottom_toTopOf="@id/post_grid"
        android:background="@drawable/bio">

        <TextView
            android:id="@+id/bio_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BIO"
            android:background="@drawable/bio"
            android:textAlignment="center"
            />

        <RelativeLayout
            android:layout_below="@+id/bio_txt"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MAA"
                android:gravity="start"
                />

            <Button
                android:layout_below="@+id/bio_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="275dp"
                android:layout_toRightOf="@id/country"
                android:gravity="end" />

        </RelativeLayout>


    </RelativeLayout>

    <GridView
        android:id="@+id/post_grid"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bio">

    </GridView>
</androidx.constraintlayout.widget.ConstraintLayout>