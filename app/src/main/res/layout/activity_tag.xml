<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChannelActivity">

    <LinearLayout
        android:id="@+id/tag_menu"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        android:orientation="horizontal"
        android:background="@color/forest">

        <TextView
            android:id="@+id/tag_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingHorizontal="15dp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.125"
            android:padding="10dp"
            android:onClick="toggleFiltersMenu"
            android:foreground="@drawable/card_ripple"
            app:srcCompat="@drawable/ic_baseline_swap_vert_24"
        />

    </LinearLayout>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/tag_swipeRefresh"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tag_menu"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tag_recycle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="5dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <RadioGroup
        android:id="@+id/tag_filters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tag_menu"
        android:background="#BF000000"
        android:visibility="gone">

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="50dp"
            android:gravity="center_vertical"
            android:text="LATEST"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:onClick="setFilterSortingTime"
            android:foreground="@drawable/card_ripple"
            />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="50dp"
            android:gravity="center_vertical"
            android:text="POPULAR"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:onClick="setFilterSortingVotes"
            android:foreground="@drawable/card_ripple"
            />

    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>